# ── Engram App Secrets ──────────────────────────────────────────────
# This file goes in your CONFIG DIRECTORY (e.g., /opt/engram/config/.env)
# OpenClaw loads it automatically at startup via dotenv.
#
# Copy this file to .env and fill in your values.
# NEVER commit this file with real values.

# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# SLACK (required for Slack integration)
# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# Create a Slack App at https://api.slack.com/apps
# Enable Socket Mode, Event Subscriptions, and Bot Token Scopes
# Required scopes: chat:write, channels:history, groups:history,
#   im:history, reactions:read, reactions:write, users:read
SLACK_BOT_TOKEN=xoxb-your-bot-token
SLACK_APP_TOKEN=xapp-your-app-token

# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# GOOGLE WORKSPACE (required for Gmail and Calendar skills)
# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# 1. Go to https://console.cloud.google.com
# 2. Create a project (or select existing one)
# 3. Enable Gmail API and Google Calendar API
# 4. Create OAuth 2.0 credentials (Desktop app type)
# 5. Use the OAuth Playground or a script to get a refresh token
#    with scopes: gmail.readonly, gmail.send, gmail.modify,
#    calendar.readonly, calendar.events
GOOGLE_CLIENT_ID=your-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-client-secret
GOOGLE_REFRESH_TOKEN=your-refresh-token

# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# NOTION (required for knowledge base, project management, RAG)
# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# 1. Go to https://www.notion.so/my-integrations
# 2. Create a new integration
# 3. Give it access to your Second Brain workspace
# 4. Copy the Internal Integration Secret
NOTION_API_TOKEN=ntn_your-notion-token

# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# OLLAMA (optional — for local model inference)
# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# URL of your Ollama server. If running on the Docker host, use:
#   host.docker.internal (macOS/Windows) or the host's LAN IP (Linux)
# OLLAMA_BASE_URL=http://host.docker.internal:11434/v1
